<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.i3cnam.gofast.views.Main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:paddingTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_am_passenger"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btPassenger"
            android:onClick="selectUserType"
            android:drawableTop="@drawable/pedestrian_100"
            android:layout_margin="20dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingRight="5sp"
            android:paddingLeft="5sp"
            android:drawablePadding="0sp"
            android:tag="passenger"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_am_driver"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btDriver"
            android:layout_margin="20dp"
            android:onClick="selectUserType"
            android:drawableTop="@drawable/driver_100"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingRight="5sp"
            android:paddingLeft="5sp"
            android:drawablePadding="0sp"
            android:tag="driver"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

</LinearLayout>

